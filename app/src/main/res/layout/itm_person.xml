<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:background="@color/purple_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Carol Daenerys  Perez "
        android:textSize="28dp"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProfile" />

    <ImageView
     android:id="@+id/ivPerson"
     android:layout_width="30dp"
     android:layout_height="30dp"
     android:background="@color/purple_200"
        android:layout_marginTop="5dp"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toLeftOf="@id/tvMutualfriends"
        app:layout_constraintTop_toBottomOf="@id/tvName"

     />

    <TextView
        android:id="@+id/tvMutualfriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 mutual friends"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        />

    <Button
        android:id="@+id/btnAddfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friend"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        app:layout_goneMarginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnDelete"
        app:layout_constraintTop_toBottomOf="@+id/ivPerson"
        


        />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Delete"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/btnAddfriend"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMutualfriends"
      
        
 />


</androidx.constraintlayout.widget.ConstraintLayout>